<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/versionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/carter_one"
        android:text="Version: 4.0.1"
        android:textAlignment="center"
        android:textColor="@color/Text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/spinnerQuestions"
        android:layout_width="364dp"
        android:layout_height="90dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/spinner_background"
        app:layout_constraintBottom_toTopOf="@+id/buttonStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/spinnerQuiz"
        android:layout_width="364dp"
        android:layout_height="90dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/spinner_background"
        app:layout_constraintBottom_toTopOf="@+id/textViewQuiz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewQuiz"
        android:layout_width="364dp"
        android:layout_height="90dp"
        android:fontFamily="@font/carter_one"
        android:text="Select Number of Questions:"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/Text"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/spinnerQuestions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewQuiz2"
        android:layout_width="243dp"
        android:layout_height="55dp"
        android:fontFamily="@font/carter_one"
        android:text="Select Quiz:"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/Text"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/spinnerQuiz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewQuiz3"
        android:layout_width="340dp"
        android:layout_height="73dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/carter_one"
        android:text="Plane Trivia"
        android:textAlignment="center"
        android:textColor="@color/Text"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textViewQuiz2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonStart"
        android:layout_width="367dp"
        android:layout_height="60dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/btn_rounded"
        android:fontFamily="@font/carter_one"
        android:text="Start Quiz"
        android:textAlignment="center"
        android:textColor="@color/Text"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/versionTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>