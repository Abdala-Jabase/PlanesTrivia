<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".FinishGame">

    <ImageView
        android:id="@+id/imageViewGoodGame"
        android:layout_width="317dp"
        android:layout_height="276dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewScore"
        android:layout_width="395dp"
        android:layout_height="138dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/carter_one"
        android:text="You made a 1/5 on the Airlines Logos Quiz 20%"
        android:textAlignment="center"
        android:textColor="@color/Text"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonShareScore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewGoodGame" />

    <Button
        android:id="@+id/buttonShareScore"
        android:layout_width="191dp"
        android:layout_height="71dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/btn_rounded"
        android:fontFamily="@font/carter_one"
        android:text="SHARE SCORE"
        android:textColor="@color/Text"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>