<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".MainQuiz">


    <TextView
        android:id="@+id/scoreTextView"
        android:layout_width="344dp"
        android:layout_height="34dp"
        android:fontFamily="@font/carter_one"
        android:text="Score: 0/25"
        android:textAlignment="center"
        android:textColor="@color/Text"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/questionImageView"
        android:layout_width="401dp"
        android:layout_height="254dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/questionTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scoreTextView"
        app:layout_constraintVertical_bias="0.641"
         />

    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="384dp"
        android:layout_height="73dp"
        android:fontFamily="@font/carter_one"
        android:text="What type of plane is this?"
        android:textAlignment="center"
        android:textColor="@color/Text"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@id/buttonTopRight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questionImageView" />

    <Button
        android:id="@+id/buttonTopLeft"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="26dp"
        android:background="@drawable/question_btn"
        android:fontFamily="@font/carter_one"
        android:text="DC-10"
        android:textColor="@color/Text"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonBottomLeft"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonTopRight"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="26dp"
        android:background="@drawable/question_btn"
        android:fontFamily="@font/carter_one"
        android:text="Boeing 757"
        android:textColor="@color/Text"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonBottomRight"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonBottomLeft"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/question_btn"
        android:fontFamily="@font/carter_one"
        android:text="Airbus A330"
        android:textColor="@color/Text"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonBottomRight"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/question_btn"
        android:fontFamily="@font/carter_one"
        android:text="Boeing 767"
        android:textColor="@color/Text"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
